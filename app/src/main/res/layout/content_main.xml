<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ru.SnowVolf.convertx.MainActivity"
    tools:showIn="@layout/activity_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:hint="@string/unicode"
                android:id="@+id/unicodeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <Button
                android:text="@string/copy2clipboard"
                android:textColor="@android:color/white"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/unicodeText"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/copy_btn2"
                android:onClick="copyUnicode"
                style="@style/Base.Widget.AppCompat.Button.Colored" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine|textNoSuggestions"
                android:hint="@string/utf"
                android:ems="10"
                android:id="@+id/utfText"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/copy_btn2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:text="@string/clear"
                android:textColor="@android:color/white"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="clearUnicode"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_alignBaseline="@+id/copy_btn2"
                android:layout_alignBottom="@+id/copy_btn2"
                android:layout_toLeftOf="@+id/copy_btn2"
                android:layout_toStartOf="@+id/copy_btn2" />

            <Button
                android:text="@string/copy2clipboard"
                android:textColor="@android:color/white"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/copy_btn"
                android:onClick="copyUtf"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:text="@string/clear"
                android:textColor="@android:color/white"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="clearUtf"
                android:layout_below="@+id/utfText"
                android:layout_toLeftOf="@+id/copy_btn"
                android:layout_toStartOf="@+id/copy_btn"
                style="@style/Base.Widget.AppCompat.Button.Colored"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
